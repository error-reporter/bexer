{
  "compilerOptions": {

    "noEmit": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "./generated-for-dist",

    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowJs": true,
    "checkJs": true,

    "target": "ESNext",
    "moduleResolution": "Node"
  },
  "types": [
    "chrome"
  ],
  "include": [
    "./generated-for-type-checks/**/*"
  ],
  "exclude": [
    "./src",
    "./generated-for-type-checks/**/iife/*",
    "./generated-for-type-checks/rollup.config.js"
  ]
}
